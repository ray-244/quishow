<main class="container mt-5 py-5">    <!-- CabeÃ§alho da pÃ¡gina -->
    <section class="experiments-header mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-2 text-primary">ðŸ§ª Experimentos</h1>
                <p class="text-light">Explore nossos experimentos quÃ­micos seguros e educativos</p>
            </div>

            {{#if user}}
                {{#if isAdmin}}
                <a href="/experimentos/create" class="btn btn-light btn-lg">
                    <i class="fas fa-plus"></i> Novo Experimento
                </a>
                {{/if}}
            {{/if}}
        </div>

        <!-- Barra de busca -->
        <form class="search-form" action="/experimentos" method="GET">
            <div class="input-group input-group-lg">
                <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-search"></i>
                </span>
                <input 
                    class="form-control border-start-0" 
                    type="search" 
                    placeholder="Buscar experimentos..." 
                    name="busca"
                    value="{{busca}}">
                <button class="btn btn-light" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </section>

    <!-- Grid de experimentos -->
    <section class="experiments-grid">
        {{#if experimentos.length}}
        <div class="row g-4">
            {{#each experimentos}}
            <div class="col-lg-4 col-md-6">
                <div class="experiment-card card h-100 shadow-sm border-0 overflow-hidden">
                    <!-- Imagem -->
                    <div class="experiment-image position-relative">
                        {{#if imagem}}
                        <img src="{{imagem}}" class="card-img-top" alt="{{titulo}}">
                        {{else}}
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-flask text-secondary" style="font-size: 3rem;"></i>
                        </div>
                        {{/if}}

                        <!-- Badge de vÃ­deo -->
                        {{#if video}}
                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                            <i class="fas fa-video"></i> VÃ­deo
                        </span>
                        {{/if}}
                    </div>

                    <!-- ConteÃºdo -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-3">{{titulo}}</h5>
                        <p class="card-text text-muted flex-grow-1" style="font-size: 0.95rem;">
                            {{descricao}}
                        </p>

                        <!-- EstatÃ­sticas -->
                        <div class="experiment-stats d-flex gap-3 mt-3 pt-3 border-top">
                            <span class="stat-item">
                                <i class="fas fa-heart text-danger"></i>
                                <span>{{curtidas}}</span>
                            </span>
                            <span class="stat-item">
                                <i class="fas fa-comment text-primary"></i>
                                <span>{{comentarios}}</span>
                            </span>
                        </div>
                    </div>

                    <!-- BotÃ£o de aÃ§Ã£o -->
                    <div class="card-footer bg-light border-top d-grid">
                        <a href="/experimentos/{{id}}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-right"></i> Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Nenhum experimento encontrado</strong>
            <p class="mt-2 mb-0">Tente ajustar sua busca ou volte mais tarde.</p>
        </div>
        {{/if}}
    </section>
</div>

<style>
    .experiments-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 3rem 2rem;
        border-radius: 12px;
        margin: -2rem -1rem 2rem -1rem;
    }

    .experiments-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .experiments-header p {
        font-size: 1.1rem;
        opacity: 0.95;
    }

    .search-form {
        margin-top: 1.5rem;
    }

    .experiment-card {
        transition: all 0.3s ease;
        height: 100%;
    }

    .experiment-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }

    .experiment-image {
        position: relative;
        overflow: hidden;
        height: 200px;
    }

    .experiment-image img {
        transition: transform 0.3s ease;
    }

    .experiment-card:hover .experiment-image img {
        transform: scale(1.05);
    }

    .experiment-stats {
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>
