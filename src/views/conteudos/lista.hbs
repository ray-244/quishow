<main class="container mt-5 py-5">
    <section class="experiments-header mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-2 text-primary">üìö Conte√∫dos Te√≥ricos</h1>
                <p class="text-light">Explore nosso acervo de conte√∫do educativo sobre qu√≠mica</p>
            </div>
            
            {{#if user}}
                {{#if isAdmin}}
                <a href="/conteudos/novo" class="btn btn-light btn-lg">
                    <i class="fas fa-plus"></i> Novo Conte√∫do
                </a>
                {{/if}}
            {{/if}}
        </div>

        <form action="/conteudos/buscar" method="GET" class="search-form">
            <div class="input-group input-group-lg">
                <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-search"></i>
                </span>
                <input 
                    type="search" 
                    name="termo" 
                    class="form-control border-start-0" 
                    placeholder="Buscar conte√∫dos..." 
                    value="{{termo}}"
                >
                <button type="submit" class="btn btn-light">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>

        {{#if termo}}
        <div class="alert alert-info mt-3 mb-0">
            <i class="fas fa-filter me-2"></i>
            Resultados para: <strong>"{{termo}}"</strong>
            <a href="/conteudos" class="float-end alert-link">Limpar filtro</a>
        </div>
        {{/if}}
    </section>

    <section class="experiments-grid">
        {{#if conteudos.length}}
        <div class="row g-4">
            {{#each conteudos}}
            <div class="col-lg-4 col-md-6">
                <div class="experiment-card card h-100 shadow-sm border-0 overflow-hidden">
                    <div class="experiment-image position-relative">
                        {{#if imagem}}
                        <img src="{{imagem}}" class="card-img-top" alt="{{titulo}}">
                        {{else}}
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-book-open text-secondary" style="font-size: 3rem;"></i>
                        </div>
                        {{/if}}

                        {{#if video}}
                        <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                            <i class="fas fa-video"></i> V√≠deo
                        </span>
                        {{/if}}
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-calendar-alt"></i> 
                                {{data_criacao}}
                            </small>
                        </div>
                        <h5 class="card-title mb-3">{{titulo}}</h5>
                        <p class="card-text text-muted flex-grow-1" style="font-size: 0.95rem;">
                            {{conteudo}}
                        </p>
                    </div>

                    <div class="card-footer bg-light border-top d-grid">
                        <a href="/conteudos/{{id}}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-right"></i> Ler Completo
                        </a>
                        
                        {{#if isAdmin}}
                        <div class="d-flex gap-2 mt-2 pt-2 border-top">
                            <a href="/conteudos/editar/{{id}}" class="btn btn-sm btn-outline-secondary flex-grow-1" title="Editar Conte√∫do">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="/conteudos/delete/{{id}}" class="btn btn-sm btn-outline-danger" title="Excluir Conte√∫do">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Nenhum conte√∫do encontrado</strong>
            <p class="mt-2 mb-0">Tente ajustar sua busca ou volte mais tarde.</p>
        </div>
        {{/if}}
    </section>
</main>

